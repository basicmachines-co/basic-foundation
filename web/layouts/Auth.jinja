{#def
  page_title,
  header_text = ""
#}
<Application :title="{{ page_title }}">
  <body class="h-full" hx-ext="response-targets">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 justify-end">
        <!-- Left-aligned section for logo and menu links -->
        <div class="flex">
          <!-- Right-aligned section for dark mode toggle and profile dropdown -->
          <div class="hidden sm:ml-6 sm:flex sm:items-center">
            <DarkModeToggle />
          </div>
        </div>
      </div>
      <main>
        <!-- centered on page -->
        <div class="mx-auto max-w-7xl p-8 sm:px-6 lg:px-8">
          <!-- heading -->
          <div class="flex min-h-full flex-col justify-center px-6 lg:px-8 lg:py-12">
            <div class="text-center sm:mx-auto sm:w-full sm:max-w-sm">
              <Logo>BASIC FOUNDATION</Logo>
              {% if header_text %}
                <h2
                  class="mt-4 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-gray-100 lg:mt-10"
                >
                  {{ header_text }}
                </h2>
              {% endif %}
            </div>
          </div>
          <!-- content -->
          <div class="mt-4 sm:mx-auto sm:w-full sm:max-w-[480px]">
            <div
              class="rounded-lg border border-gray-200 bg-white px-4 py-4 shadow dark:border-gray-700 dark:bg-black lg:px-12 lg:py-12"
            >
              <!-- notification popup -->
              <div id="notification"></div>
              {{ content }}
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</Application>
