{#def
  url, name, currentPath
#}
<a href="{{ url }}"
    :class="{
            'inline-flex items-center border-b-2 border-slate-500 px-1 pt-1 text-sm font-medium text-gray-900 dark:text-gray-100': {{ currentPath }}.startsWith('{{ url }}'),
            'inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 dark:text-gray-400 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300': !{{ currentPath }}.startsWith('{{ url }}')
            }"
> {{ name }} </a>
