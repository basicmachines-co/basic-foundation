{#def
  current_user, currentPath, mobileMenuOpen,
  menu_link="block px-4 py-2 text-base font-medium text-black hover:bg-gray-100 hover:text-gray-800 dark:text-gray-500"
#}
<!-- Mobile menu -->
<div x-show="mobileMenuOpen" class="min-h-screen bg-white sm:hidden dark:bg-black">
  {% if current_user.is_admin %}
    <div class="space-y-1 pb-3 pt-2">
      <navbar.MenuMobileNavLink
        url="/dashboard"
        name="Dashboard"
        :currentPath="{{ currentPath }}"
      />
      <navbar.MenuMobileNavLink url="/users" name="Users" :currentPath="{{ currentPath }}" />
    </div>
  {% endif %}
  <div class="border-t border-gray-200 pb-3 pt-4">
    <div class="flex items-center px-4">
      <!-- avatar -->
      <div class="flex-shrink-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-6 w-6 stroke-black dark:stroke-white"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
          />
        </svg>
      </div>
      <div class="ml-3">
        <div class="text-base font-medium text-gray-800 dark:text-gray-200">
          {{ current_user.full_name }}
        </div>
        <div class="text-sm font-medium text-gray-400 dark:text-gray-500">
          {{ current_user.email }}
        </div>
      </div>
      <DarkModeToggle />
    </div>
    <div class="mt-3 space-y-1">
      <a href="/profile" class="{{ menu_link }}">Profile</a>
      <a href="/logout" class="{{ menu_link }}">Log out</a>
    </div>
  </div>
</div>
