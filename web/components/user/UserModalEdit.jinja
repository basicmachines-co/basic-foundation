{#def
  request,
  user,
  form
#}
<section id="user_edit">
  <WTForm
    :form="{{ form }}"
    :hx_put="{{ url_for('user_modal_put', user_id=user.id) }}"
    hx-target="#modal"
    hx-target-422="#user_edit"
    hx-target-400="#notification"
    hx-swap="outerHTML"
  >
    <!-- save/cancel buttons -->
    <div class="mt-6 flex items-center justify-end gap-x-2">
      <a href="/users">
        <Button variant="link" type="button" @click="modal = false">Cancel</Button>
      </a>
      <Button id="save-button" type="submit">Save</Button>
    </div>
  </WTForm>
</section>
