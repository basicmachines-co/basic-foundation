{#def
  form,
  create: bool = False
#}
<!-- CSRF Token -->
{%
  set css={
  'div': 'sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6',
  'div.div': 'mt-2 sm:col-span-2 sm:mt-0'}
%}
<form.TextInput
  id="full_name"
  name="full_name"
  label="Full Name"
  type="text"
  autocomplete=""
  placeholder="Full Name"
  required
  :value="{{ form.full_name.data|default('', true) }}"
  :errors="{{ form.full_name.errors }}"
  :css="{{ css }}"
/>
<form.TextInput
  id="email"
  name="email"
  label="Email address"
  type="email"
  autocomplete="email"
  placeholder="your@email.com"
  :value="{{ form.email.data|default('', true) }}"
  :errors="{{ form.email.errors }}"
  :css="{{ css }}"
/>
<form.TextInput
  id="password"
  name="password"
  label="Password"
  type="password"
  autocomplete=""
  placeholder="••••••••"
  :errors="{{ form.password.errors }}"
  :css="{{ css }}"
/>
<form.TextInput
  id="password_2"
  name="password_2"
  label="Repeat Password"
  type="password"
  autocomplete=""
  placeholder="••••••••"
  :errors="{{ form.password_2.errors }}"
  :css="{{ css }}"
/>
{# do not display status on create  #}
{% if not create %}
  <form.SelectInput
    id="status"
    name="status"
    label="Status"
    required
    description="Only Active users can log in"
    :value="{{ form.status.data }}"
    :choices="{{ form.status.choices }}"
    :errors="{{ form.status.errors }}"
    :css="{{ css }}"
  />
{% endif %}

<form.SelectInput
  id="role"
  name="role"
  label="Role"
  required
  description="Admins can edit other users"
  :value="{{ form.role.data }}"
  :choices="{{ form.role.choices }}"
  :errors="{{ form.role.errors }}"
  :css="{{ css }}"
/>
