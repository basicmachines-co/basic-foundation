{#def
  form,
  error = False,
  success = False
#}
<!-- PASSWORD RESET FORM -->
<form class="space-y-6" hx-post="/reset-password" hx-target="this" hx-swap="outerHTML">
  {% if error %}
    <div class="mb-4 rounded-lg bg-red-50 p-4 text-sm text-red-800" id="error" role="alert">
      {{ error }}
    </div>
    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      Try
      <a href="/login" class="font-semibold leading-6 text-slate-600 hover:text-slate-500">
        Logging in
      </a>
      with another account
    </p>
  {% elif success %}
    <div class="mb-4 rounded-lg bg-green-50 p-4 text-sm text-green-800" id="success" role="alert">
      {{ success }}
    </div>
    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      You can now
      <a href="/login" class="font-semibold leading-6 text-slate-600 hover:text-slate-500">
        Log in
      </a>
    </p>
  {% else %}
    <!-- CSRF Token -->
    {{ form.csrf_token() }}
    <!-- reset token -->
    <input id="token" name="token" type="hidden" value="{{ form.token.data }}"/>
    <!-- password -->
    <div>
      <label for="new_password" class="block text-sm font-medium text-gray-900 dark:text-gray-100">
        New Password
      </label>
      <div class="mt-2">
        <input
            id="new_password"
            name="new_password"
            type="password"
            placeholder="••••••••"
            required
            class="block w-full rounded-md border-0 bg-white py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:text-sm sm:leading-6 dark:bg-black dark:text-gray-100 dark:ring-gray-600 dark:placeholder:text-gray-500 dark:focus:ring-slate-300"
        />
        {% if form.new_password.errors %}
          <p class="mt-2 text-sm text-red-600 dark:text-red-300">
            {{ form.new_password.errors[0] }}
          </p>
        {% endif %}
      </div>
    </div>
    <div>
      <button
          type="submit"
          class="flex w-full justify-center rounded-md bg-black px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600 dark:bg-white dark:text-black dark:hover:bg-slate-400 dark:focus-visible:outline-slate-300"
      >
        Reset
      </button>
    </div>
  {% endif %}
</form>
<!-- /PASSWORD RESET FORM -->
