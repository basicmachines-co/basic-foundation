{
  "name": "basic-foundation-web",
  "version": "1.0.0",
  "description": "Saas platform api web frontend using tailwind, alpine.js and htmx",
  "scripts": {
    "build": "tailwindcss -i static/src/input.css -o ./static/dist/css/output.css",
    "build-prod": "tailwindcss -i static/src/input.css -o ./static/dist/css/output.css --minify",
    "watch": "tailwindcss -i static/src/input.css -o ./static/dist/css/output.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "prettier": "^3.3.3",
    "prettier-plugin-jinja-template": "^1.5.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "prettier-plugin-twig-melody": "^0.4.6",
    "tailwindcss": "3.4.10"
  }
}
